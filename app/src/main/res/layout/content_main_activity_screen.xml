<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="group8.comp4020.receiptmanager.MainActivityScreen"
    tools:showIn="@layout/activity_main_screen">

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="448dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="7dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:editable="false"
            android:text="Receipt Manager"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.053" />

        <Button
            android:id="@+id/buttonConfig1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="buttonOneClick"
            android:text="Gui Config 1"
            tools:layout_editor_absoluteX="-63dp"
            tools:layout_editor_absoluteY="76dp" />

        <Button
            android:id="@+id/buttonConfig2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="buttonTwoClick"
            android:text="Gui Config 2"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="193dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
