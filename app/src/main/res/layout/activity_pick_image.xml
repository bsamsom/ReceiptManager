<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group8.comp4020.receiptmanager.PickImageActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="332dp"
        android:layout_height="399dp"
        app:srcCompat="@android:drawable/ic_menu_crop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintVertical_bias="0.19"
        app:layout_constraintHorizontal_bias="0.483" />

    <Button
        android:id="@+id/Finish"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:layout_marginRight="29dp"
        android:text="Finish"
        app:layout_constraintBaseline_toBaselineOf="@+id/LoadPictures"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/LoadPictures"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:text="@string/load_picture_button"
        app:layout_constraintRight_toLeftOf="@+id/Finish"
        android:layout_marginRight="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
